            android:textColor="@color/gray_font"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:id="@+id/fcpdj_et12"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:text="0"
