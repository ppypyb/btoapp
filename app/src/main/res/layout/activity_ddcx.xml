<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bottomsel="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="5dp"
    android:background="@color/white">
    <include layout="@layout/title"/> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/et_eoms_begion"
        android:text="订单号"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:editable="false"
        android:gravity="center_vertical"
        android:textSize="@dimen/headThreeTextSize"
        android:textColor="@color/gray_font"
        android:layout_width="45dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:id="@+id/etScan"
        android:textSize="@dimen/headSecondTextSize"
        android:text=""
        android:textColor="@color/gray_font"
        android:layout_width="200dp"
        android:layout_height="40dp"></EditText>
    <Button
        android:id="@+id/btn_camera"
        android:layout_marginLeft="5dp"
        android:text="拍照"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@mipmap/btn_chaxun"
        android:layout_width="40dp"
        android:layout_height="25dp"></Button>
    <Button
        android:id="@+id/btn_eoms_query"
        android:layout_marginLeft="5dp"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@mipmap/btn_chaxun"
        android:layout_width="40dp"
        android:layout_height="25dp"></Button>
</LinearLayout>

    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@color/gray_font"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="100dp"
            android:id="@+id/ddxz_cptu"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/default1"
            android:layout_height="115dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/ddbh"

            android:text="订单号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:editable="false"

            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/gray_font"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cpbh"

            android:text="产品编号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:editable="false"

            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/gray_font"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bbth"

            android:text="版本图号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:editable="false"

            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/gray_font"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cz"

            android:text="材质11"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:editable="false"

            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/gray_font"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sc_sc"
            android:text=""
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:editable="false"
            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/gray_font"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@color/gray_font"
        android:layout_height="1px" />
        <ListView
            android:id="@+id/ddjd_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
</LinearLayout>

</RelativeLayout>