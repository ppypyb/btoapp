<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:layout_marginTop="0dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp">
        <com.example.factoryapplication.ui.CircleImageView
            android:layout_width="200dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/toux"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/me_mc"
            android:text="订单号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/black"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@color/gray_font"
        android:layout_height="1px" />
        <TextView
            android:id="@+id/me_gh"
            android:text="订单号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/black"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@color/gray_font"
            android:layout_height="1px" />
        <TextView
            android:id="@+id/me_bm"
            android:text="订单号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/black"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@color/gray_font"
            android:layout_height="1px" />
        <TextView
            android:id="@+id/me_zw"
            android:text="订单号"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/headThreeTextSize"
            android:textColor="@color/black"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@color/gray_font"
            android:layout_height="1px" />

        <Button
            android:id="@+id/server_btn"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/btn_save"
            android:gravity="center_horizontal|center_vertical"
            android:text="设置服务器"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/zhuxiao_btn"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:background="@mipmap/btn_save"
            android:gravity="center_horizontal|center_vertical"
            android:text="注销"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>